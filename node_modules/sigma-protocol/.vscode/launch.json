{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Jest tests",
      "type": "node",
      "request": "launch",
      "args": ["--runInBand"],
      "runtimeArgs": ["--inspect-brk=0", "--preserve-symlinks"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "restart": true,
      "smartStep": true,
      "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
      "sourceMaps": true,
      "env": {
        "JEST_CONF": "${workspaceFolder}/jest.config.cjs"
      }
    }
  ]
}
